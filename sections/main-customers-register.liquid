<section data-section-id="reset-password" data-section-type="reset-password">
  <div class="Container register">
    <div class="PageContent PageContent--fitScreen register">
      {%- form 'create_customer', name: 'create_customer', class: 'Form Form--spacingTight', id: 'create_customer' -%}
        <header class="Form__Header">
          <h1 class="Form__Title Heading u-h1">{{ 'customer.register.title' | t }}</h1>
          <p class="Form__Legend">ご登録いただくメールアドレス宛に<br class="sp">確認メールを送信いたします。<br>
          下記ドメインのメールを受信できるよう設定を<br class="sp">お願いいたします。<br>
          @bigwing.co.jp</p>
        </header>

        {%- if form.errors -%}
          <div class="Form__Alert Alert Alert--error">
            <ul class="Alert__ErrorList">
              {%- for field in form.errors -%}
                {%- if field == 'form' -%}
                  <li class="Alert__ErrorItem">{{ form.errors.messages[field] }}</li>
                {%- else -%}
                  <li class="Alert__ErrorItem">
                    <strong>{{ form.errors.translated_fields[field] }}</strong>
                    {{ form.errors.messages[field] }}</li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        {%- if request.locale.iso_code == 'ja' -%}
          <div class="registerBlk">
            <p class="registerBlk__text name">お名前</p>
            <div class="registerBlk__content">
              <div class="Form__Item">
                <input type="text" class="Form__Input register name" name="customer[last_name]" aria-label="{{ 'customer.register.last_name' | t }}" placeholder="{{ 'customer.register.last_name' | t }}">
              </div>


              <div class="Form__Item">
                <input type="text" class="Form__Input register name" name="customer[first_name]" aria-label="{{ 'customer.register.first_name' | t }}" placeholder="{{ 'customer.register.first_name' | t }}" autofocus>
              </div>
            </div>
          </div>
        {%- else -%}
          <div class="Form__Item">
            <input type="text" class="Form__Input register" name="customer[first_name]" aria-label="{{ 'customer.register.first_name' | t }}" placeholder="{{ 'customer.register.first_name' | t }}" autofocus>
          </div>

          <div class="Form__Item">
            <input type="text" class="Form__Input register" name="customer[last_name]" aria-label="{{ 'customer.register.last_name' | t }}" placeholder="{{ 'customer.register.last_name' | t }}">
          </div>
        {%- endif -%}

        <div class="Form__Item mail">
          <p class="registerBlk__text">メールアドレス</p>
          <div class="registerBlk__content">
            <input type="email" class="Form__Input register" name="customer[email]" aria-label="{{ 'customer.register.email' | t }}" placeholder="{{ 'customer.register.email' | t }}" required="required">
          </div>
        </div>

        <div class="Form__Item password">
          <p class="registerBlk__text">パスワード</p>
          <div class="registerBlk__content">
            <input type="password" class="Form__Input register" name="customer[password]" aria-label="{{ 'customer.register.password' | t }}" placeholder="{{ 'customer.register.placeholder' | t }}" required="required">
          </div>
        </div>

        <button class="Form__Submit Button Button--primary Button--full" type="submit">{{ 'customer.register.submit' | t }}</button>
      {%- endform -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer register"
}
{% endschema %}